      data-property= "{videoURL:'http://youtu.be/uw08j-yOfcE',containment:self,autoPlay: true, mute:true, startAt: 5, opacity: 1, addRast
      er: true, stopAt: 75.5, showControls:false, stopMovieOnBlur:false}">
