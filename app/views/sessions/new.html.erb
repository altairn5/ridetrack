  <div class="modal-dialog flip-wrapper">
    <div class="modal-content flip active" id="loginFlip">
      <div class="modal-body">
        <header class="header">
          <p class="title">Log in</p>
        </header>
        <div class="alert alert-danger hide" id="errorWrapperLogin"><button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button></div>
        <div class="form-controls">
          <div class="form-controls">
            <a id="auth-loginlink" href="#" class="btn-secondary btn-block btn-big" data-track-event="SignUpModal,SignUpWithFacebook" action="post"><i class="icon-facebook"></i>&nbsp;&nbsp;Log in with Facebook</a>

          </div>
          <div class="line-form-separator"></div>
          <div class="form-group">
            <%= form_for @user, url: "/sessions", method: "post" do |f| %>
            <%= f.text_field :email, placeholder: "Email", :class => "form-control" %><br>
            <%= f.password_field :password, placeholder: "Password", :class => "form-control" %>
          </div>
          <div class="form-controls">
            <%= f.submit "Sign In", :class => "btn-primary btn-block" %>
          </div>
						<% end %> 
         </div>
      </div>
    </div>
  </div>


